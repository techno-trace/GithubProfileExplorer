{
  "name": "GithubProfileExplorer",
  "description": "This is a github profile explorer.",
  "version": "1.1",
  "private": false,
  "author": {
    "name": "Digambar Saha",
    "email": "loveanimesh143@gmail.com",
    "url": "https://github.com/techno-trace"
  },
  "type": "module",
  "homepage": "https://techno-trace.github.io/GithubProfileExplorer",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:local": "tsc && vite build -m development",
    "preview": "vite preview",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "format:check": "prettier -c 'src/**/*.{ts,tsx}'",
    "test:ui": "playwright test --ui",
    "test:all": "playwright test",
    "test:firefox": "playwright test --project=firefox",
    "test:chromium": "playwright test --project=chromium",
    "test:safari": "playwright test --project=safari",
    "test:mobile_chrome": "playwright test --project=mobile_chrome",
    "test:mobile_safari": "playwright test --project=mobile_safari",
    "test:chrome": "playwright test --project=chrome"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.5",
    "@playwright/test": "^1.45.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@vitejs/plugin-react": "^4.3.1",
    "axios": "^1.7.2",
    "moment": "^2.30.1",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6.22.2",
    "vite": "^5.3.4",
    "vite-plugin-eslint": "^1.8.1",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@types/react": "^18.2.63",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.39",
    "prettier": "^3.2.5",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.3.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/global.setup.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
